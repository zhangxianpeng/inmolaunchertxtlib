<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NORMAL" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="FullScreenTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置窗口的背景为透明，设置透明背景必须要设置此项
             说明：这是不可以直接设置#00000000，直接设置会无效， 要在colors.xml文件夹下添加一个颜色值-->
        <item name="android:windowBackground">@color/trans</item>
        <!-- 设置窗口的背景是否为半透明，设置透明背景必须要设置此项 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置Activity显示为全屏
             说明：如果这里设置为true的话，状态栏也会隐藏，会出现一个视觉差，这个看个人需求而定-->
        <item name="android:windowFullscreen">true</item>
        <!--设置Activity不显示标题栏-->
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>
</resources>