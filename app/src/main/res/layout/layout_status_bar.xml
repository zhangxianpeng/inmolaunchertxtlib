<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40pt"
    android:background="@color/black">

    <com.inmoglass.launcher.view.StatusBarBlueToothView
        android:layout_width="17pt"
        android:layout_height="21pt"
        android:layout_centerVertical="true"
        android:layout_marginEnd="28pt"
        android:layout_toStartOf="@+id/sbb_wifi" />

    <com.inmoglass.launcher.view.StatusBarWifiStateView
        android:id="@+id/sbb_wifi"
        android:layout_width="22pt"
        android:layout_height="17pt"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25pt"
        android:layout_toStartOf="@+id/ll_battery" />

    <LinearLayout
        android:id="@+id/ll_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="21pt"
        android:orientation="horizontal">

        <com.inmoglass.launcher.view.PowerConsumptionRankingsBatteryView
            android:id="@+id/sbb_battery"
            android:layout_width="11pt"
            android:layout_height="17pt"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv_isCharging"
            android:layout_width="16pt"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_icon_statusbar_battery_charging"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
