<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/text_style"
        android:text="您有备忘录事项，请及时处理"
        android:textSize="22pt"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="83dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvMemoContent"
        style="@style/text_style"
        android:layout_marginTop="28dp"
        android:text="您有备忘录事项，请及时处理"
        android:textSize="30pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ifvCancel"
        android:layout_width="96pt"
        android:layout_height="96pt"
        android:layout_marginBottom="65pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_icon_key_cancel" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ifvCancel"
        app:layout_constraintStart_toStartOf="@+id/ifvCancel"
        app:layout_constraintTop_toBottomOf="@+id/ifvCancel" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ifvCancelSelectedBg"
        android:layout_width="106pt"
        android:layout_height="106pt"
        android:layout_marginBottom="60pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/shape_selected_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>