<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/text_style"
        android:layout_marginTop="18pt"
        android:text="@string/string_memo_data"
        android:textSize="20pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34pt"
        android:layout_marginTop="21pt"
        android:layout_marginRight="34pt"
        android:background="@drawable/bg_home_note"
        android:orientation="vertical"
        android:paddingTop="28pt"
        android:paddingBottom="28pt"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17pt"
                android:layout_height="17pt"
                android:layout_gravity="center"
                android:src="@drawable/icon_note_rectangle" />

            <TextView
                android:id="@+id/tvMemoContent"
                style="@style/text_style"
                android:layout_gravity="center"
                android:layout_marginStart="10pt"
                android:textSize="28pt"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <TextClock
            style="@style/text_style"
            android:layout_gravity="center"
            android:layout_marginTop="12pt"
            android:format12Hour="MM月dd日 EEEE"
            android:format24Hour="MM月dd日 EEEE"
            android:textSize="20pt"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <TextView
        style="@style/text_style"
        android:text="@string/string_click_to_close"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>