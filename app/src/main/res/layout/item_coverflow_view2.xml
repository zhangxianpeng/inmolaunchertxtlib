<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180pt"
    android:layout_height="292pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_home_card">

        <ImageView
            android:id="@+id/iv_channelImg"
            android:layout_width="160pt"
            android:layout_height="200pt"
            android:layout_marginStart="10pt"
            android:layout_marginTop="10pt"
            android:src="@drawable/img_home_kuaizhao_qqmusic" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:src="@drawable/ic_icon_home_qqmusic" />

        <TextView
            android:id="@+id/tv_appName"
            style="@style/text_style"
            android:layout_gravity="center"
            android:layout_marginTop="3pt"
            android:gravity="center"
            android:text="@string/string_home_qq_music"
            android:textSize="20pt" />
    </LinearLayout>
</androidx.cardview.widget.CardView>