<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50pt"
        android:layout_marginBottom="50pt"
        android:background="@drawable/bg_dialog">

        <TextView
            android:id="@+id/tvCountdownTime"
            style="@style/text_style"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="30S"
            android:textSize="64pt" />

        <TextView
            android:id="@+id/tvMemoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCountdownTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12pt"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/string_too_low_battery_shutdown"
            android:textColor="@color/colorWhite"
            android:textSize="26pt" />

        <TextView
            android:layout_width="360pt"
            android:layout_height="62pt"
            android:layout_below="@+id/tvMemoContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28pt"
            android:background="@drawable/bg_btn_ok"
            android:gravity="center"
            android:paddingLeft="50pt"
            android:paddingRight="50pt"
            android:text="@string/string_i_kwnon"
            android:textColor="@color/colorWhite"
            android:textSize="22pt" />
    </RelativeLayout>
</RelativeLayout>