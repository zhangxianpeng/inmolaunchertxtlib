<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NotificationCourseActivity">

    <com.inmo.ui.loading.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="44pt"
        android:layout_height="44pt"
        android:layout_gravity="center"
        android:src="@drawable/loading_anim"
        android:visibility="gone"/>

    <com.inmoglass.launcher.viewpager.BannerLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_connecting_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_battery_green"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_preview"
            style="@style/text_style"
            android:text="开启手机蓝牙，打开Inmolens"
            android:textSize="26pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_connected_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>
</FrameLayout>