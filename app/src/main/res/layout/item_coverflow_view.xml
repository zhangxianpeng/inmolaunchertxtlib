<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200pt"
        android:layout_height="278pt"
        android:orientation="vertical"
        android:background="@mipmap/bg_home_card">

        <ImageView
            android:id="@+id/iv_channelImg"
            android:layout_width="180pt"
            android:layout_height="190pt"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:src="@drawable/img_home_kuaizhao_qqmusic" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:src="@drawable/ic_icon_home_qqmusic" />

        <TextView
            android:id="@+id/tv_appName"
            style="@style/text_style"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="3pt"
            android:text="@string/string_home_qq_music"
            android:textSize="20pt" />
    </LinearLayout>
</FrameLayout>