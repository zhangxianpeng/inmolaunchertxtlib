<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/adapter_chapterList_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/color_withe"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/adapter_chapterList_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toStartOf="@+id/adapter_chapterList_progress"
        android:layout_toLeftOf="@+id/adapter_chapterList_progress"
        android:layout_toEndOf="@+id/adapter_chapterList_index"
        android:layout_toRightOf="@+id/adapter_chapterList_index"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/first_chapter"
        android:textColor="@color/color_withe"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:id="@+id/adapter_chapterList_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/zero_percent"
        android:textColor="@color/color_7e7e7e"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>